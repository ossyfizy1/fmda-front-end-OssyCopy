                                    %>
                                    <!--<option value="<%= //tType[i].name %>"><%= //tType[i].name %></option>-->
                                    <% 
                                            // } 
                                    %> 
                                    <!--</select>-->

                                    <div class="row">
                                        <div class="col-md-12">
                                            <label>Select Your Certification Type(s) & Upload Respective Certificate:</label>
                                            <hr>
                                        </div>

                                    <% 
                                        var tType = treasureCertificationType
                                        for(i = 0; i < tType.length; i++)
                                            {
                                    %>
                                        <div class="col-md-3">
                                            <input type="checkbox" name="certificationType" id="certificationType" value="<%= tType[i].name %>" /> <%= tType[i].name %>    
                                        </div>
                                    <% 
                                            } 
                                    %> 
                                    </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3 form-group position-relative">
                                    <label>Certification Type 1 (pdf)</label>
                                    <input name="treasuryCertification" type="file" class="form-control" id="treasuryCertification" placeholder="Treasury Certification">
                                </div>
                                
                                <div class="col-md-3 form-group position-relative">
                                    <label style="margin-top: 20px;">Certification Type 2 (pdf)</label>
                                    <input name="treasuryCertification" type="file" class="form-control" id="treasuryCertification" placeholder="Treasury Certification">
                                </div>
                                
                                <div class="col-md-3 form-group position-relative">
                                    <label style="margin-top: 20px;">Certification Type 3 (pdf)</label>
                                    <input name="treasuryCertification" type="file" class="form-control" id="treasuryCertification" placeholder="Treasury Certification">
                                </div>
                                
                                <div class="col-md-3 form-group position-relative">
