                    <div class="card-body">

                        <div class="col-md-12">

                        
                        <form action="/confirmatory_update" method="post" class="form-horizontal" enctype="multipart/form-data">
                            <div class="col-md-12 form-group position-relative">
                                <select required name="memberType" id="memberType" class="form-control">
                                    <option value="">Member Type:</option>
                                    <% 
                                        var mType = memberTypes
                                        for(i = 0; i < mType.length; i++)
                                            {
                                    %>
                                    <option value="<%= mType[i].type %>"><%= mType[i].type %></option>
                                    <% 
                                            } 
                                    %> 
                                </select>
                            </div>
                            <div class="col-md-12 form-group position-relative">
                                <!--<select required name="certificationType" id="certificationType" class="form-control">-->
                                    <!--<option value="">Certification Type:</option>-->
                                    <% 
                                        // var tType = treasureCertificationType
