                                    <input name="treasuryCertification" type="file" class="form-control" id="treasuryCertification" placeholder="Treasury Certification">
                                </div>
                            </div>
                            

                            <fieldset class="form-group position-relative">
                                <select required name="industryCategory" id="iCType" onchange="industryCat()" class="form-control">
                                    <option value="">Industry Category:</option>
                                    <% 
                                        var iCType = industriesCategory
                                        for(i = 0; i < iCType.length; i++)
                                            {
                                    %>
                                    <option value="<%= iCType[i].industryName %>"><%= iCType[i].industryName %></option>
                                    <% 
                                            } 
                                    %> 
                                </select>
                                

                                <!-- jquery & ajax link -->
                                <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js "></script>

                                <script>
                                    function industryCat() 
                                    {

                                            // upon industry category selection, always empty the dropdown selection with id = "industryTypeDisplay" for industry type dropdown
                                            $("#industryTypeDisplay").empty();

                                            var mySelection = $("#iCType").val();
                                            // alert( mySelection + " was clicked");

                                            $.ajax({
                                                        type: 'POST',
                                                        url: '/industriesTypesList', 
                                                        data: {"mySelection" : mySelection}  // This will send the form data to the php page
                                                    })
                                                    .done(function(data){
                                                        
                                                        // show the response
                                                        // $('#response').html(data);
                                                        // alert(data.response);

                                                        var industryTypesGottenPerselection = data.response
                                                        // alert(industryTypesGottenPerselection);
                                                        // alert(industryTypesGottenPerselection.length);

                                                        for (let index = 0; index < industryTypesGottenPerselection.length; index++) {
                                                            const element = industryTypesGottenPerselection[index];
                                                            // alert(element);
                                                            
                                                            $("<option>" + element + "</option>").appendTo("#industryTypeDisplay");
                                                        }
                                                        
                                                    })
                                                    .fail(function() {
                                                    
                                                        // just in case posting your form failed
                                                        alert( "Posting failed." );
                                                        
                                                    });

                                    }
                                </script>
                            </fieldset>
                            <fieldset class="form-group position-relative">
                                <label>Industry Type:</label>
