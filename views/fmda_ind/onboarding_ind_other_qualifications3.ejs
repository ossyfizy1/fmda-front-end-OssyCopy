                      <!-- add to list -->
                      <script>

                            var submitOtherQualificatnList = [];

                            $("#addMoreEH").click(function(){
                              //  alert("add more o");
  
                              // empty the upload
                              $("#upload-input").val("");
                              $('#uploadStatus').text("");
  
                                  var institutionName = $("#institutionName").val();
                                  var qualification = $("#qualificationType").val();
                                  var yearAttained = $("#yearAttained").val();
  
                                  console.log(institutionName, qualification, yearAttained)
  
                                  // add the folder path to uploaded files
                                  var certificateURL = "other_professional_certificate_upload/" + sessionStorage.getItem("uploadedFileNameOtherProCert");
  
                                  if(institutionName == '' || qualification == '' || yearAttained == ''){
  
                                      // using sweet alert tutorial at https://sweetalert.js.org/
                                      // swal(
                                      //         {
                                      //             title: "info!",
                                      //             text: "kindly fill all fields...",
                                      //             icon: "info",
                                      //         },
                                              
                                      //     );
  
                                      swal("kindly fill all fields!", {
                                              buttons: false,
                                              timer: 2000,  // disappears after 2 seconds
                                          });
  
  
                                    
                                  }
                                  else
                                  {
                                      // convert it to object
                                      var addAsObject = {
                                          institutionName : institutionName,
                                          qualification : qualification,
                                          yearAttained : yearAttained,
                                          certificateURL : certificateURL
                                      }
  
                                      
                                      submitOtherQualificatnList.push(addAsObject);
                                        console.log(submitOtherQualificatnList)

                                        var html = "<table class='table table-striped'>";
                                        for (var i = 0; i < submitOtherQualificatnList.length; i++) {
                                            
                                            html+="<tr>";
                                            html+="<td>"+submitOtherQualificatnList[i].institutionName+"</td>";
                                            html+="<td>"+submitOtherQualificatnList[i].qualification+"</td>";
                                            html+="<td>"+submitOtherQualificatnList[i].yearAttained+"</td>";
                                            html+="<td class='deleteButton btn btn-default' onClick='deleteFunction("+i+")'><i class='fa fa-trash'></i></td>";
                                            
                                            html+="</tr>";

                                        }
                                        html+="</table>";

                                        // display record
                                        $("#savedListOfQualiifications").html(html);

                                        // clear fields
                                        $("#institutionName").val("");
                                        $("#qualificationType").val("");
                                        $("#yearAttained").val("");
                                  }

                                  // show
                                  if(submitOtherQualificatnList.length > 0){
                                        $("#submitOtherQualificatn").show();
                                    };
  
                            });


                            // function to delete items
                            function deleteFunction(param){
                                // console.log(param);
                                // console.log(submitOtherQualificatnList);
                                // console.log(submitOtherQualificatnList[0]);

                                // someArray.splice(x, 1);

                                submitOtherQualificatnList.splice(param, 1);
                                console.log(submitOtherQualificatnList);
                                console.log(submitOtherQualificatnList.length);

                                var html = "<table class='table table-striped'>";
                                for (var i = 0; i < submitOtherQualificatnList.length; i++) {
                                    
                                    html+="<tr>";
                                    html+="<td>"+submitOtherQualificatnList[i].institutionName+"</td>";
                                    html+="<td>"+submitOtherQualificatnList[i].qualification+"</td>";
                                    html+="<td>"+submitOtherQualificatnList[i].yearAttained+"</td>";
                                    html+="<td class='deleteButton btn btn-default' onClick='deleteFunction("+i+")'><i class='fa fa-trash'></i></td>";
                                    
                                    html+="</tr>";

                                }
                                html+="</table>";

                                // display record
                                $("#savedListOfQualiifications").html(html);


                                // show
                                if(submitOtherQualificatnList.length == 0){
                                    $("#submitOtherQualificatn").hide();
                                }
                            }


                            // submitOtherQualificatn
                            // function to submit the List
                            function submitOtherQualificatn(){
                                console.log("to submit: "+ JSON.stringify(submitOtherQualificatnList));



                                //  call "/ind_other_proffessional_qualifications" endpoint to add emplyoment history
                                $.post("/ind_other_proffessional_qualifications", {"values":JSON.stringify(submitOtherQualificatnList)}, function(data){
                                    
                                    // empty the fields
                                    $("#institutionName").val("");
                                    $("#qualificationType").val("");
                                    $("#yearAttained").val("");

                                    if (data == "Successful !") {
                                        window.location.href='/ind_attestation';
                                    } else if(data == "failed, kindly contact the admin") {
                                        alert("try again or contact the admin.")
                                    }

                                });
                            }

  
                      </script>
  
  
