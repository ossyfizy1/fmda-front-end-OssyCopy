<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>FMDA</title>
  <!-- Favicon icon -->
  <link rel="icon" type="image/png" sizes="16x16" href="../../img/fmdalogo.png">
  <link href="../../new_assets/css/style.css" rel="stylesheet">
  <link href="../../new_assets/plugins/tables/css/datatable/dataTables.bootstrap4.min.css" rel="stylesheet">
  <link href="../../new_assets/css/mycss.css" rel="stylesheet">
  <script src="../../new_assets/js/modernizr-3.6.0.min.js"></script>
</head>

<body class="v-light vertical-nav fix-header fix-sidebar">
  <div id="preloader">
    <div class="loader">
      <svg class="circular" viewBox="25 25 50 50">
        <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" /></svg>
    </div>
  </div>
  <div id="main-wrapper">
    <!-- header -->
    <%- include('../includes/sub-sections/dashboard-header.ejs')%>
    <!-- #/ header -->

    <!-- sidebar -->
    <%- include('../includes/sub-sections/dashboard-sidebar.ejs', {})%>
    <!-- #/ sidebar -->
    <!-- content body -->
    <div class="content-body">

        <section id="material-datatable">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-0">
                        <div class="card-header">
                            <h4 class="card-title">FMDA Admin details</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body">

                                <!--  Table Content: Start -->
                                <table class="mt- table table-hover table-striped white">

                                    <!--  Table Head  -->
                                    <!--  <thead>
                                            <tr>
                                            </tr>
                                        </thead> -->

                                    <!--  Table Body  -->
                                    <tbody>

                                        <!-- 1. Firstname -->
                                        <tr>
                                            <td>Firstname</td>
                                            <td>
                                                <%= admin.firstName %>
                                            </td>
                                        </tr>

                                        <!-- 2. Lastname -->
                                        <tr>
                                            <td>Lastname</td>
                                            <td>
                                                <%= admin.lastName %>
                                            </td>
                                        </tr>

                                        <!-- 3. username -->
                                        <tr>
                                            <td>Username</td>
                                            <td>
                                                <%= admin.username %>
                                            </td>
                                        </tr>

                                        <!-- 4. officialEmail -->
                                        <tr>
                                            <td>Official Email</td>
                                            <td>
                                                <%= admin.officialEmail %>
                                            </td>
                                        </tr>

                                        <!-- 5. type -->
                                        <tr>
                                            <td>Admin Type</td>
                                            <td>
                                                <%= admin.type %>
                                            </td>
                                        </tr>

                                        <!-- 6. Department -->
                                        <tr>
                                            <td>Department</td>
                                            <td>
                                                <%= admin.department %>
                                            </td>
                                        </tr>

                                        <!-- 7. dateCreated -->
                                        <tr>
                                            <td>Date Created</td>
                                            <td>
                                                <%= admin.dateCreated %>
                                            </td>
                                        </tr>

                                        <!-- 8. gender -->
                                        <tr>
                                            <td>Gender</td>
                                            <td>
                                                <%= admin.gender %>
                                            </td>
                                        </tr>

                                        <!-- 9. address -->
                                        <tr>
                                            <td>address</td>
                                            <td>
                                                <%= admin.address %>
                                            </td>
                                        </tr>

                                        <!-- 10. phoneNumber -->
                                        <tr>
                                            <td>phoneNumber</td>
                                            <td>
                                                <%= admin.phoneNumber %>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                                <!--  Table Content: End -->


                                <!-- Form Start -->
                                <form class="form form-horizontal row-separator mt-5" action="/admin/capabilities/update_capabilities/<%= admin.officialEmail %>" method="POST" >
                                    <div class="form-body">
                                        <h4 class="form-section">Manage capabilities for <%= `${admin.firstName} ${admin.lastName}` %> </h4>
                                        <!-- Verifier comment -->
                                        <div class="form-group row mx-auto last" style="height: 500px; overflow-y: scroll;">
                                            <label class="col-md-4 label-control" for="verifierComment">Select or deselect capabilities: </label>
                                            <div class="col-md-8">
                                                <% 
                                                <!-- function to check if capabilityId is a part of the admin's capability id  -->
                                                const checkCapability = (capabilityId) => (
                                                    admin.capabilityIds.find(item  => item === capabilityId) !== undefined ?
                                                    'checked' : '' 
                                                );

                                                lookUpCapabilities.forEach((item) => { %>
                                                    <label class="selectContainer"><%= item.capability %>
                                                      <input type="checkbox" name="capabilityIds" <%= checkCapability(item.capabilityId) %> value=<%= item.capabilityId %> >
                                                      <span class="checkmark"></span>
                                                    </label>
                                                <% }); %>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Submit button  -->
                                    <div class="form-actions text-right">
                                        <button type="submit" class="btn btn-darken-2 btn-success" >Update Capabilities</button>
                                    </div>

                                </form>
                                <!-- Form end  -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
      
    </div>
    <!-- #/ content body -->
    <!-- footer -->
    <%- include('../includes/sub-sections/dashboard-footer.ejs', {})%>   
    <!-- #/ footer -->
  </div>
  <!-- Common JS -->
  <script src="../../new_assets/plugins/common/common.min.js"></script>
  <script src="../../new_assets/plugins/tables/js/jquery.dataTables.min.js"></script>
  <script src="../../new_assets/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
  <script src="../../new_assets/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>
  <!-- Custom script -->
  <script src="../../new_assets/js/custom.min.js"></script>
  <!-- Custom dashboard script -->
  <script src="../../new_assets/js/dashboard-1.js"></script>
</body>

</html>
